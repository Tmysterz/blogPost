<div class="text-center">
    <h2>{{name}}</h2>
    <p>{{description}}</p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<h3>Update Blog:</h3>

<form class="form new-blog-form">
    <div class="form-group">
        <label for="blog-name">Blog Name:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" value="{{name}}" />
    </div>
    <div class="form-group">
        <label for="blog-team">Team Name:</label>
        <input class="form-input" type="text" id="blog-team" name="blog-team"  value="{{team}}"/>
    </div>
    <div class="form-group">
        <label for="blog-desc">Description:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc">{{description}}</textarea>
    </div>
    <div class="form-group">
        <button id="updateBTN" type="submit" class="btn btn-primary" data-id="{{id}}">Update</button>
    </div>
</form>
</div>
  <script src="/js/update.js"></script>