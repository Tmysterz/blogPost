<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Blog created by {{user.name}} on {{format_date date_created}}</p>
</div>

{{#if Comments }}
<h3>------------------------------------------------------------------------------------------------------- </h3>
{{#each Comments}}
<div class="text-center">
  <p>{{comment}}</p>
  <p>Comment created by {{user.name}} on {{format_date date_created}}</p>
  <h3>------------------------------------------------------------------------------------------------------- </h3>
</div>
{{/each}}
{{/if}}

{{#if logged_in}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a comment to this blog:</h3>

    <form class="form new-comment-form " data-down-id="{{id}}" >
      <div class="form-group">
        <label for="blog-comment">Comment:</label>
        <input class="form-input" type="text" id="blog-comment" name="blog-comment" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-down-id="{{id}}">Create</button>
      </div>
    </form>
  </div>
</div>
{{/if}}

<script src="/js/comment.js"></script>