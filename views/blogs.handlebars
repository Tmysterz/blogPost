<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

{{#if blog.Comments }}
{{#each blog.Comments}}
<div class="text-center">
  <p>{{comment}}</p>
  <p>Created by {{User.name}} on {{format_date date_created}}</p>
</div>
{{/each}}
{{/if}}

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a comment to this blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Comment:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>